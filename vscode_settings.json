{
    "editor.fontFamily": "'Cascadia Code Light', 'Fira Code',  'Droid Sans Mono', 'Droid Sans Fallback', 'PowerlineSymbols', 'monospace'",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.fontWeight": 100,
    "editor.guides.bracketPairs": "active",
    "terminal.integrated.fontFamily": "'Cascadia Code Light', 'Monaco Nerd Font', 'Fira Code','Droid Sans Mono', 'Droid Sans Fallback', 'Font Awesome 5 Brands', 'FontAwesome', 'Meslo LG S DZ for Powerline', 'Inconsolata Nerd Font Mono', 'Nerd Font', 'icomoon'",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontWeightBold": "normal",
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash"
        },
        "zsh": {
            "path": "zsh"
        },
        "fish": {
            "path": "fish"
        },
        "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
        },
        "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
        }
    },
    "terminal.integrated.splitCwd": "workspaceRoot",
    "terminal.integrated.env.linux": {},
    "jupyter.allowUnauthorizedRemoteConnection": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.wordWrap": "on",
    "jupyter.interactiveWindowMode": "perFile",
    "jupyter.askForKernelRestart": false,
    "workbench.startupEditor": "newUntitledFile",
    // "window.enableMenuBarMnemonics": false,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "explorer.confirmDragAndDrop": false,
    "autoDocstring.includeName": true,
    "autoDocstring.startOnNewLine": true,
    "python.analysis.completeFunctionParens": true,
    "explorer.confirmDelete": false,
    "files.autoSave": "afterDelay",
    "debug.console.fontFamily": "Cascadia Code Light",
    "debug.console.fontSize": 14,
    // "workbench.panel.defaultLocation": "right",
    "debug.allowBreakpointsEverywhere": true,
    "debug.toolBarLocation": "docked",
    // "terminal.integrated.automationProfile.linux": "",
    "autoDocstring.includeExtendedSummary": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "git.enableSmartCommit": true,
    "settingsSync.ignoredExtensions": [
        "tabnine.tabnine-vscode"
    ],
    "editor.minimap.maxColumn": 200,
    "editor.wordWrapColumn": 120,
    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    },
    "python.pythonPath": "",
    "jupyter.jupyterServerType": "local",
    "window.restoreFullscreen": true,
    "python.linting.flake8Args": [
        "--ignore=E501,F401,F403,F405,E712,W504"
    ],
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.tabs.location": "left",
    "C_Cpp.updateChannel": "Insiders",
    "workbench.iconTheme": "vscode-icons",
    "debug.onTaskErrors": "abort",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "right"
    },
    "json.schemas": [],
    "notebook.lineNumbers": "on",
    "terminal.integrated.gpuAcceleration": "on",
    "notebook.editorOptionsCustomizations": null,
    "autoDocstring.docstringFormat": "numpy",
    "autoDocstring.customTemplatePath": ".vscode/custom.mustache",
    "extensions.autoUpdate": "onlyEnabledExtensions",
    "workbench.colorCustomizations": {
        "[Visual Studio Dark]": {
            "gitDecoration.modifiedResourceForeground": "#E2C08D",
            "gitDecoration.untrackedResourceForeground": "#6A9955"
        },
        "[Nord]": {
            // Basic Darker Background
            "sideBar.background": "#21252E",
            "activityBar.background": "#21252E",
            "activityBarBadge.foreground": "#21252E",
            "badge.foreground": "#21252E",
            "debugExceptionWidget.border": "#21252E",
            "editorWidget.background": "#21252E",
            "editor.background": "#21252E",
            "editorBracketMatch.background": "#21252E00",
            "editorGroup.emptyBackground": "#21252E",
            "editorGroupHeader.tabsBorder": "#4C566A",
            "editorGroupHeader.noTabsBackground": "#21252E",
            "editorGroupHeader.tabsBackground": "#21252E",
            "editorGutter.background": "#21252E",
            "editorSuggestWidget.background": "#21252E",
            "list.activeSelectionForeground": "#21252E",
            "minimap.background": "#21252E",
            "notificationCenterHeader.background": "#21252E",
            "notifications.border": "#21252E",
            "panel.background": "#21252E",
            "peekViewEditor.background": "#21252E",
            "peekViewEditorGutter.background": "#21252E",
            "peekViewResult.background": "#21252E",
            "quickInputList.focusForeground": "#21252E",
            "tab.inactiveBackground": "#21252E",
            "tab.activeBackground": "#2E3440",
            "terminal.background": "#21252E",
            "titleBar.activeBackground": "#21252E",
            "titleBar.border": "#21252E00",
            "titleBar.inactiveBackground": "#21252E",
            "walkThrough.embeddedEditorBackground": "#21252E",
            "statusBar.debuggingBackground": "#EBCB8B",
            "statusBar.debuggingForeground": "#2E3440",
            // Highlights
            "gitDecoration.submoduleResourceForeground": "#8fbcbb66",
            "merge.incomingHeaderBackground": "#8fbcbb66",
            "merge.incomingContentBackground": "#8fbcbb4d",
            "terminal.ansiBrightCyan": "#8fbcbb66",
            "textPreformat.foreground": "#8fbcbb66",
            "activityBar.activeBorder": "#88c0d033",
            "activityBarBadge.background": "#88c0d0",
            "badge.background": "#88c0d0A3",
            "debugConsole.infoForeground": "#88c0d0",
            "editor.findMatchBackground": "#88c0d066",
            "editor.findMatchHighlightBackground": "#88c0d033",
            "editor.findRangeHighlightBackground": "#88c0d033",
            "editorBracketMatch.border": "#88c0d033",
            "editorLink.activeForeground": "#88c0d033",
            "editorOverviewRuler.findMatchForeground": "#88c0d066",
            "editorOverviewRuler.rangeHighlightForeground": "#88c0d066",
            "editorOverviewRuler.selectionHighlightForeground": "#88c0d066",
            "editorOverviewRuler.wordHighlightForeground": "#88c0d066",
            "editorOverviewRuler.wordHighlightStrongForeground": "#88c0d066",
            "editorSuggestWidget.focusHighlightForeground": "#88c0d0A3",
            "editorSuggestWidget.highlightForeground": "#88c0d0A3",
            "list.activeSelectionBackground": "#D8DEE9BB",
            "list.focusBackground": "#4C566A",
            "list.dropBackground": "#4C566A",
            "list.highlightForeground": "#81A1C1",
            "minimap.findMatchHighlight": "#81A1C1",
            "minimap.selectionHighlight": "#88c0d0cc",
            "notificationCenterHeader.foreground": "#88c0d033",
            "notificationLink.foreground": "#88c0d033",
            "panelTitle.activeBorder": "#88c0d000",
            "panelTitle.activeForeground": "#81A1C1",
            "peekViewEditor.matchHighlightBackground": "#88c0d04d",
            "peekViewResult.fileForeground": "#81A1C1",
            "peekViewResult.matchHighlightBackground": "#88c0d0cc",
            "peekViewTitleLabel.foreground": "#88c0d033",
            "pickerGroup.foreground": "#88c0d033",
            "progressBar.background": "#88c0d033",
            "selection.background": "#81A1C1",
            "tab.activeBorder": "#88c0d000",
            "tab.unfocusedActiveBorder": "#88c0d000",
            "tab.hoverBorder": "#88c0d000",
            "tab.unfocusedHoverBorder": "#88c0d000",
            "tab.activeBorderTop": "#88c0d000",
            "tab.unfocusedActiveBorderTop": "#88c0d000",
            "terminal.ansiCyan": "#88c0d0",
            "textLink.activeForeground": "#88c0d033",
            "textLink.foreground": "#81A1C1",
        }
    },
    "vsicons.dontShowNewVersionMessage": true,
    "terminal.integrated.inheritEnv": false,
    "editor.semanticHighlighting.enabled": false,
    "git.confirmSync": false,
    "python.terminal.executeInFileDir": true,
    "debug.terminal.clearBeforeReusing": true,
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "workbench.colorTheme": "Nord",
    "redhat.telemetry.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.sideBar.location": "right",
    "workbench.experimental.layoutControl.type": "both",
    "window.menuBarVisibility": "compact"
}
